        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:clipToPadding="false"
        android:clipChildren="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>